<div class="row  ">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8">

        <form role="form" id="form" method="get" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">昵称</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= name %>" name="name">
                </div>
            </div>
            <div class="hr-line-dashed leftmargin animated fadeInRight"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">性别</label>
                <div class="col-sm-10"><select class="form-control m-b" name="account" value="<%= sex %>">
                        <option value="男"
                                <% if (sex == "男"){ %>
                                selected
                                <% } %>
                        >男
                        </option>
                        <option value="女"
                                <% if (sex == "女") { %>
                                selected
                                <% } %>
                        >女
                        </option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">邮箱</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="<%= email %>" name="email">
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">手机</label>
                <div class="col-sm-10">
                    <input type="number" minlength="11" maxlength="11" class="form-control" value="<%= phone %>"
                           name="phone">
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div id="baseinfo-birthdate-field" class="form-group">
                <label class="col-sm-2 control-label">生日</label>

                    <div  class=" col-sm-10 " id="data_1">
                    <div class="input-group date  " data-provide="datepicker" data-date-format="yyyy/mm/dd">
                    <span class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </span>
                        <input type="text" class="form-control"  value="<%= birth %>" >
                    </div>
                    </div>

            </div>

            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-2 control-label">所在城市</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= city %>" name="city">
                </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">国籍</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="<%= nationality %>" name="nationality">
                </div>
            </div>
            <div class="hr-line-dashed"></div>
        </form>
        <div class="row">
            <div class="col-lg-3">
            </div>
            <div class="col-lg-2">
                <button id="baseinfo-save-btn" class="btn btn-sm btn-primary  m-t-n-xs" type="submit">
                    <strong>保存信息</strong>
                </button>
            </div>
            <div class="col-lg-1">
            </div>
            <div class="col-lg-2">
            </div>
            <div class="col-lg-2">
                <button id="baseinfo-modifycode-btn" type="button" data-toggle="modal"
                        data-target="#my-modify-modal" class="btn btn-sm btn-primary m-t-n-xs">
                    <strong>修改密码</strong>
                </button>
            </div>
            <div class="col-lg-2">
            </div>
        </div>
    </div>
    <div class="col-lg-2">
    </div>
</div>

