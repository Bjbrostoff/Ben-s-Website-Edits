<div class="ibox  white-bg animated fadeInRight"
     style="position: absolute;top: 60px;right: 0px;width:400px;min-height: 1200px;border-left: #e7eaec thick solid;">
    <div class="ibox-title">
        <h5>课程详情</h5>
        <div class="ibox-tools">
            <a class="close-link btn-close">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content">
        <form id="course-manage-generate-form" class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-3 control-label">课程名称</label>
                <div class="col-sm-9">
                    <%console.log(course)%>
                    <input class="form-control course-manage-generate-course" type="text" name="name" value="<%=course['name']%>" required>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程简介</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="introduction"><%=course['introduction']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">详情</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="info"><%=course['info']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">大纲</label>
                <div class="col-sm-9">
                    <textarea class="form-control course-manage-generate-course" type="text" name="catalog"><%=course['catalog']%></textarea>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">计费方式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" name="billing">
                        <option selected="<% course['billing']['type']['fvalue'] == 0?'select':'unselected'%>" value="0">按每节课收费</option>
                        <option selected="<% course['billing']['type']['fvalue'] == 1?'select':'unselected'%>" value="1">按每小时收费</option>
                        <option selected="<% course['billing']['type']['fvalue'] == 2?'select':'unselected'%>" value="2">按课程收费</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">单价(RMB)</label>
                <div class="col-sm-9">
                    <input class="form-control course-manage-generate-course" name="price" value="<%=course['price']%>">
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">授课方式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course" >
                        <option selected="<% course['method']['type'] == 0?'select':'unselected'%>">教室授课</option>
                        <option selected="<% course['method']['type'] == 1?'select':'unselected'%>">上门授课</option>
                        <option selected="<% course['method']['type'] == 2?'select':'unselected'%>">网上远程授课</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">授课模式</label>
                <div class="col-sm-9">
                    <select class="form-control course-manage-generate-course">
                        <option selected="<% course['mode']['type'] == 0?'select':'unselected'%>">一对一授课</option>
                        <option selected="<% course['mode']['type'] == 1?'select':'unselected'%>">一对多授课</option>
                    </select>
                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">面向年龄群体</label>
                <input class="col-sm-2 course-manage-generate-course" name="range-min" value="<%=course['range']['min']%>">
                <label class="col-sm-1 control-label">至</label>
                 <input class="col-sm-2 course-manage-generate-course" name="range-max" value="<%=course['range']['max']%>">
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程缩略图</label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label">课程图片</label>
                <div class="col-sm-9">

                </div>
            </div>
            <div class="hr-line-dashed"></div>


        </form>
    </div>
</div>
